<Window x:Class="JTC_Games_1.LoginDetailsWrong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JTC_Games_1"
        mc:Ignorable="d"
        Title="LoginDetailsWrong" Height="180" Width="200">
    <Grid Background="#FF1A316C">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="7"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="118" Width="192" TextAlignment="Center" Margin="0,10,0,0" Foreground="Red" Grid.ColumnSpan="3"><Run Text="Your Login Details seem to be wrong. Please check with the builders of this game "/><Run Text="to"/><Run Text=" register and play"/></TextBlock>
        <Button x:Name="button" Content="Try Again" HorizontalAlignment="Left" Margin="35,95,0,0" VerticalAlignment="Top" Width="124" Height="33" Background="Black" Foreground="#FF8266DE" Click="button_Click" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
